<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9CE8FF"
    tools:context=".QueuezMainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#212121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mainQueueTitleDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Queuez"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/createQueueMyQueuezBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="20dp"
        android:background="#212121"
        android:fontFamily="@font/roboto_slab"
        android:text="Create Queue"
        android:textColor="#9CE8FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/joinQueueBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/joinQueueBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="4dp"
        android:background="#212121"
        android:fontFamily="@font/roboto_slab"
        android:text="Join Queue"
        android:textColor="#9CE8FF"
        app:layout_constraintBottom_toBottomOf="@+id/createQueueMyQueuezBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/createQueueMyQueuezBtn" />

    <Button
        android:id="@+id/myQueuezTab"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:fontFamily="@font/roboto_slab"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="My Queuez"
        android:textColor="#70CDFF"
        app:layout_constraintEnd_toStartOf="@+id/joinedQueuezTab"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/joinedQueuezTab"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:background="#70CDFF"
        android:fontFamily="@font/roboto_slab"
        android:text="Joined Queuez"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/myQueuezTab"
        app:layout_constraintTop_toTopOf="@+id/myQueuezTab" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewQueuezMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="#fff"
        app:layout_constraintBottom_toTopOf="@+id/createQueueMyQueuezBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myQueuezTab"
        />

    <ImageButton
        android:id="@+id/mainQueuezInfoBtn"
        android:tint="#9CE8FF"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="#212121"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/info_icon"
        android:text="Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="#212121"
        android:fontFamily="@font/roboto_slab_light"
        android:text="Logout"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#9CE8FF"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>